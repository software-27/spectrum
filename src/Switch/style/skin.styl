$switch-track-disabled-background-color = $spectrum-alias-background-color-transparent
$switch-handle-background-color = $spectrum-alias-background-color-default

.coral3-Switch {
  height: $spectrum-switch-toggle-height-default;

  &:hover .coral3-Switch-input:not(:disabled) {
    + .coral3-Switch-label:after {
      border-color: $spectrum-switch-border-color-hover;
      box-shadow: none;
    }
  }

  &:active .coral3-Switch-input:not(:disabled) {
    + .coral3-Switch-label:after {
      border-color: $spectrum-switch-border-color-active;
    }
  }
}

.coral3-Switch-label {
   height: $spectrum-switch-toggle-height-default;
   width: $spectrum-switch-toggle-width-default;
}

// :before is used for the track of the switch
.coral3-Switch-label:before {
 background: $spectrum-switch-toggle-track-color-default;
}

// :after is used for the handle of the switch
.coral3-Switch-label:after {
 background: $switch-handle-background-color;
 border: 2*$px solid $spectrum-switch-border-color-default;
}

.coral3-Switch-input {

 &:checked {
   + .coral3-Switch-label:after {
     border-color: $spectrum-switch-border-color-active;
   }
 }

 &:focus + .coral3-Switch-label:after {
   border-color: $spectrum-switch-border-color-focus;
   box-shadow 0 0 0 1*$px $spectrum-switch-border-color-focus;
 }

 &:disabled {
   + .coral3-Switch-label:before {
     background: $switch-track-disabled-background-color;
   }

   + .coral3-Switch-label:after {
     border-color: $spectrum-switch-border-color-disabled;
   }
 }
}
