@import '../../abstract/components/textfield/skin.styl'

/* The transition-placeholder function works around a bug in Nib's placeholder mixin */
transition-placeholder() {
  transition: color $spectrum-transition-time ease-in-out;
}

.coral-Textfield {
  /* The transition-placeholder function works around a bug in Nib's placeholder mixin */
  placeholder(color $spectrum-color-text-placeholder-default, font-weight normal, font-style italic, transition-placeholder);

  spectrum-textfield()

  &::placeholder {
    spectrum-textfield-placeholder()
  }

  &:hover {
    placeholder(color $spectrum-color-text-placeholder-hover, font-weight normal);

    spectrum-textfield--hover()

    &::placeholder {
      spectrum-textfield-placeholder--hover()
    }
  }

  &:focus {
    spectrum-textfield--focus()
  }

  &[disabled] {
    placeholder(color $spectrum-color-text-placeholder-disabled, font-weight normal);

    spectrum-textfield--disabled()

    &::placeholder {
      spectrum-textfield-placeholder--disabled()
    }
  }

  &:invalid,
  &.is-invalid {
    spectrum-textfield--invalid()
  }
}

.coral-Textfield--quiet {
  spectrum-textfield--quiet()

  &:hover {
    spectrum-textfield--quiet--hover()
  }

  &:focus {
    spectrum-textfield--quiet--focus()
  }

  &:disabled {
    spectrum-textfield--quiet--disabled()
  }

  &:invalid,
  &.is-invalid {
    spectrum-textfield--quiet--invalid()
  }
}

// readonly overwrites invalid
.coral-Textfield[readonly] {
  no-glow();

  &:invalid
  &.is-invalid {
    no-glow();
    color: $spectrum-color-text-default;
  }
}

