@require '../../commons'
@import '@spectrum/spectrum-abstract-stylus/dist/components/textfield'

.coral-Textfield  {
  spectrum-textfield()
}

.coral-Textfield--quiet {
  spectrum-textfield--quiet()
}

// to be used for textarea
.coral-Textfield--multiline {
  spectrum-textfield--multiline()

  &.coral-Textfield--quiet {
    spectrum-textfield--quiet--multiline()
  }
}

.coral-Form--vertical .coral-Form-field.coral-Textfield{
  display: block;
  width: 100%;
}

.coral-Form--aligned .coral-Form-field.coral-Textfield--multiline {
  display: block;
}

@require 'light.styl'
@require 'dark.styl'
