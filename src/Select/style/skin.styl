$spectrum-select-border-color-invalid = $spectrum-alias-border-color-invalid-default;

$spectrum-select-background-color-disabled = $spectrum-alias-background-color-transparent;
$spectrum-select-border-color-disabled = $spectrum-alias-border-color-transparent;
$spectrum-select-text-color-default = $spectrum-text-text-color-default;
$spectrum-select-text-color-disabled = $spectrum-text-text-color-disabled;

$spectrum-select-invalid-icon-color = $spectrum-global-color-red2;

.coral3-Select {

  > .coral-Button {
    border-color: $spectrum-select-border-color-default;
    background-color: $spectrum-select-background-color-default;
    position: relative;
    color: $spectrum-select-text-color-default;

    &:hover, &:active {
      background-color: $spectrum-select-background-color-hover;
      border-color: $spectrum-select-border-color-default;
      color: $spectrum-select-text-color-default;
    }

    &:focus:not(.is-selected) {
      box-shadow: 0 0 0 1*$px $spectrum-select-border-color-focus;
      border-color: $spectrum-select-border-color-focus;
    }

    &.is-disabled {
      background-color: $spectrum-select-background-color-disabled;
      border-color: $spectrum-select-border-color-disabled;
      color: $spectrum-select-text-color-disabled;
    }
  }

  .coral-BasicList-item {
    &[hidden] {
      display: block !important;
    }
  }

  > .coral-Menu {
    &::after {
      background-color: $spectrum-select-border-color-default;
    }
  }

  > .coral-TagList {
    display: none;
  }

  &.is-invalid {
    > .coral-Button {
      &::after {
        background-image: svgurl(embedurl($spectrum-select-invalid-icon-url)) svg(path fill $spectrum-select-invalid-icon-color);
      }

      &:not(.is-selected) {
        border-color: $spectrum-select-border-color-invalid;

        &:focus {
          box-shadow: 0 0 0 1*$px $spectrum-select-border-color-invalid;
          border-color: $spectrum-select-border-color-invalid;
        }
      }
    }
  }

  &.is-openAbove {
    > .coral-Button {
      border-color: $spectrum-global-color-grey6 !important;
      border-top: 0px transparent;
    }
    .coral3-SelectList {
      border-bottom: 0px transparent;
    }
  }

  &.is-openBelow {
    > .coral-Button {
      border-color: $spectrum-global-color-grey6 !important;
      border-bottom: 0px transparent;
    }
    .coral3-SelectList {
      border-top: 0px transparent;
    }
  }
}

.coral3-Select--quiet {
  > .coral-Button {
    background: none;
    border-color: transparent;
    border-radius: 0;

    &[disabled], &.is-disabled,
    &.is-selected, &:hover {
      background: none;
      border-color: transparent;
      border-radius: 0;
      box-shadow: none;
    }

    &:not(:disabled):not(.is-disabled) {
      &:hover {
        .coral3-Select-label {
          text-decoration: none;
        }
      }

      &:focus {
        box-shadow: 0 1*$px 0 $spectrum-select-border-color-focus;
        border-color: $spectrum-select-border-color-focus;
      }
    }
  }

  > .coral-Menu {
    box-shadow: 0 1*$px 4*$px 0 rgba(0, 0, 0, .1);

    &::after {
      display: none;
    }
  }

  &.is-openAbove, &.is-openBelow {
    .coral3-SelectList {
      border-top: $px solid $spectrum-global-color-grey6;
      border-bottom: $px solid $spectrum-global-color-grey6;
    }
  }

  &.is-invalid {
    > .coral-Button, > .coral-Button:not(.is-selected) {
      border-color: transparent;
      box-shadow: none;
    }
  }
}
