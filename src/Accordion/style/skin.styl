$spectrum-accordion-item-text-color = $spectrum-color-text-accordion-default
$spectrum-accordion-item-border-color = $spectrum-color-border-accordion-default
$spectrum-accordion-item-highlight-color = $spectrum-color-text-accordion-hover
$spectrum-accordion-item-disabled-text-color = $spectrum-color-text-accordion-disabled
$spectrum-accordion-item-border-focus-color = $spectrum-color-border-left-accordion-focus

.coral3-Accordion-item {
  border-color: $spectrum-accordion-item-border-color;
}

.coral3-Accordion-header {
  color: $spectrum-accordion-item-text-color;

  &:focus,
  &:hover {
    color: $spectrum-accordion-item-highlight-color;
  }

  &:focus {
    border-left-color: $spectrum-accordion-item-border-focus-color;
  }
}

.coral3-Accordion-item.is-disabled {
  .coral3-Accordion-header {
    &,
    &:hover,
    &:focus {
      color: $spectrum-accordion-item-disabled-text-color;
    }
  }
}

