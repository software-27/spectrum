@require '../../commons'

$spectrum-accordion-item-height = 40*$px
$spectrum-accordion-item-padding = 16*$px
$spectrum-accordion-item-border-size = 1*$px
$spectrum-accordion-item-focus-border-size = 2*$px
$spectrum-accordion-icon-spacing = 16*$px
$spectrum-accordion-item-header-font-size = 13*$px
$spectrum-accordion-item-content-padding = 16*$px

.coral3-Accordion {
  display: block;
  list-style: none;

  padding: 0;
  margin: 0;
}

.coral3-Accordion-item {
  z-index: inherit;
  position: relative;

  display: list-item;
  margin: 0;

  border-top: $spectrum-accordion-item-border-size solid transparent;
  border-bottom: $spectrum-accordion-item-border-size solid transparent;

  & + & {
    border-top-width: 0;
  }
}

.coral3-Accordion-header {
  position: relative;

  box-sizing: border-box;
  // left padding takes into account the icon's size
  padding: 0 $spectrum-accordion-item-padding 0 $spectrum-accordion-item-padding*2;
  margin: 0;

  // Subtract the size of the border since it's on the item itself
  height: $spectrum-accordion-item-height - ($spectrum-accordion-item-border-size * 2);

  // For focus state
  border-left: $spectrum-accordion-item-focus-border-size solid transparent;

  font-size: $spectrum-accordion-item-header-font-size;
  text-transform: uppercase;
  line-height: $spectrum-accordion-item-height;

  overflow: ellipsis;
  cursor: pointer;

  &:focus {
    outline: none;
  }
}

.coral3-Accordion-icon {
  position: absolute;
  left: $spectrum-accordion-icon-spacing;
  top: 0;
}

.coral3-Accordion-label {
  bold-text();

  display: block;
}

.coral3-Accordion-content {
  padding: 0 $spectrum-accordion-item-content-padding 0 $spectrum-accordion-item-content-padding;
}

.coral3-Accordion-content.is-closed {
  display: none;
}

.coral3-Accordion-content.is-open {
  display: block;
}

.coral3-Accordion-content.is-collapsing {
  position: relative;
  height: 0;
  overflow: hidden;
  transition: height ease 0.35s, visibility ease 0.35s;
}

coral-accordion-item-content {
  display: block;
  padding-bottom: $spectrum-accordion-item-content-padding;
}

.coral3-Accordion--large {
  display: block;

  width: 100%;
}

@require 'light.styl'
@require 'dark.styl'
