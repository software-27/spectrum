.coral-TagList {
  &.is-disabled > .coral-Tag {
    border-color: $spectrum-tag-border-color-disabled;
    background-color: $spectrum-tag-disabled-bg;
    color: $spectrum-tag-text-color-disabled;

    &:focus,
    &:hover,
    &:active {
      box-shadow: none;
      border-color: $spectrum-tag-border-color-disabled;
      background-color: $spectrum-tag-disabled-bg;
      color: $spectrum-tag-text-color-disabled;
    }

    .coral-Tag-removeButton .coral-Icon {
      color: $spectrum-tag-icon-color-disabled;
    }
  }
