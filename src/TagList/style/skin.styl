$tag-colored-text-color = white
$spectrum-tag-remove-button-color = white
$spectrum-tag-disabled-bg = $spectrum-alias-background-color-transparent

.coral-Tag.is-closable:not([color]) {
  &:focus {
    border-color: $spectrum-tag-border-color-focus;
    color: $spectrum-tag-text-color-focus;

    .coral-Icon {
      color: $spectrum-tag-icon-color-focus;
    }
  }

  &:hover {
    border-color: $spectrum-tag-border-color-hover;
    color: $spectrum-tag-text-color-hover;
    box-shadow: none;

    .coral-Icon {
      color: $spectrum-tag-icon-color-hover;
    }
  }

  &:active {
    border-color: $spectrum-tag-border-color-active;
    color: $spectrum-tag-text-color-active;
    box-shadow: none;

    .coral-Icon {
      color: $spectrum-tag-icon-color-active;
    }
  }
}

.coral-Tag {
  color: $spectrum-tag-text-color-default;
  background-color: transparent;
  border: 1*$px solid $spectrum-tag-border-color-default;

  &:focus {
    box-shadow: 0 0 0 1*$px $spectrum-tag-border-color-focus;
  }

  &.coral-Tag--quiet {
    border-color: transparent;
    background-color: transparent;
    color: $spectrum-tag-text-color-default;

    &.is-closable:hover,
    &.is-closable:active {
      border-color: transparent;
    }
  }
}

// Color variants
.coral-Tag--blue,
.coral-Tag--lightblue,
.coral-Tag--periwinkle,
.coral-Tag--plum,
.coral-Tag--fuchsia,
.coral-Tag--magenta,
.coral-Tag--red,
.coral-Tag--orange,
.coral-Tag--tangerine,
.coral-Tag--yellow,
.coral-Tag--chartreuse,
.coral-Tag--green,
.coral-Tag--kellygreen,
.coral-Tag--seafoam,
.coral-Tag--cyan {
  color: $tag-colored-text-color;

  &.is-closable {
    .coral-Icon {
      opacity: .75;
    }

    .coral-Tag-removeButton {
      color: $spectrum-tag-remove-button-color;

      &:focus {
        color: $spectrum-tag-remove-button-color;

        .coral-Icon {
          opacity: 1;
        }
      }

      &:hover {
        color: $spectrum-tag-remove-button-color;
      }
    }

    &:focus {
      color: $tag-colored-text-color;
      border-color: $spectrum-tag-border-color-focus;
      background-color: $spectrum-tag-border-color-focus;

      .coral-Tag-removeButton .coral-Icon {
        color: $spectrum-tag-remove-button-color;
      }
    }

    &:hover {
      color: $tag-colored-text-color;

      .coral-Icon {
        opacity: .9;
      }
    }

    &:active .coral-Icon {
      opacity: 1;
    }
  }
}

