$tag-colored-text-color = white

$spectrum-tag-icon = white

$spectrum-tag-color-blue = $spectrum-color-info
$spectrum-tag-color-red = $spectrum-color-error
$spectrum-tag-color-yellow = $spectrum-color-warning
$spectrum-tag-color-green = $spectrum-color-success
$spectrum-tag-color-grey = $spectrum-color-constant-grey8

$spectrum-tag-color-lightblue = $spectrum-color-constant-blue1

$spectrum-tag-text = $spectrum-color-text-secondary
$spectrum-tag-color-hover = $spectrum-color-constant-grey9
$spectrum-tag-color-active = $spectrum-color-constant-grey10
$spectrum-tag-focus = $spectrum-color-focus-blue
$spectrum-tag-disabled-bg = $spectrum-color-background-disabled
$spectrum-tag-disabled-text = $spectrum-color-text-disabled
$spectrum-tag-border-color = $spectrum-color-constant-grey7

.coral-Tag[closable]:not([color]) {
  &:focus {
    border-color: $spectrum-tag-focus;
    color: $spectrum-tag-focus;

    .coral-Icon {
      color: $spectrum-tag-focus;
    }
  }

  &:hover {
    border-color: $spectrum-tag-color-hover;
    color: $spectrum-tag-color-hover;
    box-shadow: none;

    .coral-Icon {
      color: inherit;
    }
  }

  &:active {
    border-color: $spectrum-tag-color-active;
    color: $spectrum-tag-color-active;
    box-shadow: none;
  }
}

.coral-Tag {
  color: $spectrum-tag-text;
  background-color: transparent;
  border: 1*$px solid $spectrum-tag-border-color;

  &:focus {
    box-shadow: 0 0 0 1*$px $spectrum-tag-focus;
  }

  &.coral-Tag--quiet {
    border-color: transparent;
    background-color: transparent;
    color: $spectrum-color-text-default;

    &[closable]:hover,
    &[closable]:active {
      border-color: transparent;
    }
  }
}

// Color variants
.coral-Tag--blue,
.coral-Tag--lightblue,
.coral-Tag--periwinkle,
.coral-Tag--plum,
.coral-Tag--fuchsia,
.coral-Tag--magenta,
.coral-Tag--red,
.coral-Tag--orange,
.coral-Tag--tangerine,
.coral-Tag--yellow,
.coral-Tag--chartreuse,
.coral-Tag--green,
.coral-Tag--kellygreen,
.coral-Tag--seafoam,
.coral-Tag--cyan {
  color: $tag-colored-text-color;

  &[closable] {
    .coral-Icon {
      opacity: .75;
    }

    .coral-Tag-removeButton {
      color: $spectrum-tag-icon;

      &:focus {
        color: $spectrum-tag-focus;

        .coral-Icon {
          opacity: 1;
        }
      }

      &:hover {
        color: $spectrum-tag-icon;
      }
    }

    &:focus {
      color: $tag-colored-text-color;
      border-color: $spectrum-tag-focus;
      background-color: $spectrum-tag-focus;

      .coral-Tag-removeButton .coral-Icon {
        color: $spectrum-tag-icon;
      }
    }

    &:hover {
      color: $tag-colored-text-color;

      .coral-Icon {
        opacity: .9;
      }
    }

    &:active .coral-Icon {
      opacity: 1;
    }
  }
}

