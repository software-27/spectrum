.coral-TagList {
  &.is-disabled > .coral-Tag {
    border-color: $spectrum-tag-disabled-bg;
    background-color: $spectrum-tag-disabled-bg;
    color: $spectrum-tag-disabled-text;

    &:focus,
    &:hover,
    &:active {
      box-shadow: none;
      border-color: $spectrum-tag-disabled-bg;
      background-color: $spectrum-tag-disabled-bg;
      color: $spectrum-tag-disabled-text;
    }

    .coral-Tag-removeButton .coral-Icon {
