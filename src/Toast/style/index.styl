@import '@spectrum/spectrum-css/dist/components/toast/index.css';
@import '@spectrum/spectrum-css/dist/components/toast/multiStops/light.css';
@import '@spectrum/spectrum-css/dist/components/toast/multiStops/lightest.css';
@import '@spectrum/spectrum-css/dist/components/toast/multiStops/dark.css';
@import '@spectrum/spectrum-css/dist/components/toast/multiStops/darkest.css';

@import '../../commons'

.coral-ToastContainer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10050;
  display: flex;
  flex-direction: column;
  align-items: center;
  pointer-events: none;

  .spectrum-Toast {
    margin-top: 5*$px;
    pointer-events: all;
  }
}

.coral-Toast-slide-enter, .coral-Toast-slide-appear {
  opacity: 0;
  transform: translate3d(0, -100%, 0);
}

.coral-Toast-slide-enter-active, .coral-Toast-slide-appear-active {
  opacity: 1;
  transform: translate3d(0, 0, 0);
  transition: all $spectrum-transition-time;
  transition-timing-function: cubic-bezier(0.175, 0.885, 0.320, 1.275);
}

.coral-Toast-slide-leave {
  opacity: 1;
  transform: translate3d(0, 0, 0);
}

.coral-Toast-slide-leave-active {
  opacity: 0;
  transform: translate3d(0, -100%, 0);
  transition: all $spectrum-transition-time ease-in-out;
}
