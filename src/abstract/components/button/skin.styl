@require '../../commons'

spectrum-button() {
  &:focus {
    box-shadow: 0 0 0 $spectrum-button-box-shadow-spread-size $spectrum-color-border-button-primary-focus
  }

  &:hover {
    box-shadow: none
  }

  &:active {
    box-shadow: none
  }
}

spectrum-button-icon() {
  color: $spectrum-color-button-icon-default
}

spectrum-button-icon-hover() {
  color: $spectrum-color-button-icon-hover
}

spectrum-button-icon-active() {
  color: $spectrum-color-button-icon-active
}

spectrum-button-icon-selected() {
  color: $spectrum-color-button-icon-active
}

spectrum-button--primary() {
  background-color: $spectrum-color-background-button-primary-default

  border-color: $spectrum-color-border-button-primary-default

  color: $spectrum-color-text-button-primary-default

