    color: $spectrum-color-text-button-primary-hover
  }

  &:active {
    background-color: $spectrum-color-background-button-primary-active

    border-color: $spectrum-color-border-button-primary-active

    color: $spectrum-color-text-button-primary-active
  }

  &:disabled,
  &[disabled] {
    background-color: $spectrum-color-background-button-primary-disabled

    border-color: $spectrum-color-border-button-primary-disabled

    color: $spectrum-color-text-button-primary-disabled
  }
}

