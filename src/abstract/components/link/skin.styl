spectrum-link--default() {
  color: $spectrum-color-text-link-default
}

spectrum-link--hover() {
  color: $spectrum-color-text-link-hover
}

spectrum-link--active() {
  color: $spectrum-color-text-link-active
}

spectrum-link--focus() {
  color: $spectrum-color-text-link-focus
  box-shadow: 0 1*$px 0 $spectrum-color-text-link-focus
}

spectrum-link--subtle() {
  color: inherit;
}

spectrum-link--subtle--hover() {
  color: inherit;
}

spectrum-link--subtle--active() {
  color: inherit;
}

spectrum-link--subtle--focus() {
  color: inherit;
  // box-shadow color should be inherit link the color, too
  box-shadow: 0 1*$px 0 $spectrum-color-link-line-subtle-focus
}
