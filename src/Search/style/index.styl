@reqiure '../../commons'

.coral-Search {
  display: inline-block;
  position: relative;

  // Search Icon
  .coral-Icon {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    margin-left: 10px;
    font-size: 15px;
  }

  // Clear Icon
  .coral-DecoratedTextfield-button {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    margin: 0;

    .coral-Icon {
      font-size: 10px;
    }
  }

  .coral-DecoratedTextfield-input {
    text-indent: 10px;
    padding-left: 0;
  }

  // Move text to right when the icon is visible
  .coral-DecoratedTextfield-icon:not([hidden]) + .coral-DecoratedTextfield-input {
    padding-left: 25px;
  }
}

