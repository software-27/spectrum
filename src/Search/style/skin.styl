$spectrum-search-icon-color = $spectrum-color-constant-grey8
$spectrum-search-hover-color = $spectrum-color-constant-grey9
$spectrum-search-placeholder-color = $spectrum-color-constant-grey7
$spectrum-search-disabled-color = $spectrum-color-constant-grey6

.coral-Search {

  // Search Icon
  .coral-Icon {
    color: $spectrum-search-icon-color;
  }

  // Input Text
  .coral-DecoratedTextfield-input {
    color: $spectrum-search-hover-color;

    placeholder(color: $spectrum-search-placeholder-color);

    &:hover {
      placeholder(color: $spectrum-search-hover-color);
    }
  }

  // Disabled Style
  &.is-disabled {
    .coral-Icon {
      color: $spectrum-search-disabled-color;
    }
  }
}
