$spectrum-selectlist-background-color = $spectrum-color-constant-grey1
$spectrum-selectlist-border-color = $spectrum-color-border-default

$spectrum-selectlist-item-background-color = $spectrum-color-constant-grey1;
$spectrum-selectlist-item-background-color-hover = $spectrum-color-constant-grey2;
$spectrum-selectlist-item-background-color-focused = $spectrum-color-constant-grey3;

$spectrum-selectlist-item-border-color-focused = $spectrum-color-border-focus;

$spectrum-selectlist-checked-icon-color = $spectrum-color-constant-blue3;

.coral3-SelectList {
  background-color: $spectrum-selectlist-background-color;
  border-color: $spectrum-selectlist-border-color;
}

.coral3-SelectList-item {
  background-color: $spectrum-selectlist-item-background-color;
  border-left-color: transparent;
  color: $spectrum-color-text-default;

  &.is-selected {
    color: $spectrum-color-text-active;

    &:after {
      background-image: svgurl(embedurl($spectrum-selectlist-checked-icon-url)) svg(path fill $spectrum-selectlist-checked-icon-color);
    }
  }

  &:focus {
    background-color: $spectrum-selectlist-item-background-color-focused;
    border-left-color: $spectrum-selectlist-item-border-color-focused;
  }

  &:hover {
    border-left-color: transparent;
    background-color: $spectrum-selectlist-item-background-color-hover;
  }

  &.is-disabled {
    background-color: $spectrum-selectlist-background-color;
    border-left-color: transparent;
    color: $spectrum-color-text-disabled;
  }
}

.coral-SelectList-group:before {
  background-color: $spectrum-selectlist-item-background-color-hover;
}
