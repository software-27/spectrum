@require '../../commons'

.coral-RadioGroup {
  .coral-Radio {
    margin-right: 12*$px;
  }
}

.coral-RadioGroup--vertical {
  .coral-Radio {
    display: block;
    margin: 0;
  }
}

.coral-RadioGroup--labelsBelow {
  .coral-Radio {
    height: 36*$px;
    margin: 0;
  }

  .coral-Radio-checkmark {
    margin-bottom: 18*$px;
  }

  .coral-Radio-description {
    position: relative;
    top: 12*$px;
    left: -17*$px;
  }
}
