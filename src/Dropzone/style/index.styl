@import '@spectrum/spectrum-variables/stylus/spectrum-light.styl'

$spectrum-dropzone-border-width = 2px;
$spectrum-dropzone-border-radius = 4px;
$spectrum-dropzone-padding = 72px;
$spectrum-dropzone-border-color = rgb(225, 225, 225);
$spectrum-dropzone-border-color-selected-hover = rgb(38, 128, 235);
$spectrum-dropzone-background-color-selected-hover = rgba(20,115,230,0.1);

.spectrum-Dropzone {
  text-align: center;
  border-width: $spectrum-dropzone-border-width;
  border-radius: $spectrum-dropzone-border-radius;
  padding: $spectrum-dropzone-padding;
  border-style: dashed;

  &.is-dragged {
    border-style: solid;
  }
}

.spectrum-Dropzone {
  border-color: $spectrum-dropzone-border-color;

  &.is-dragged {
    border-color: $spectrum-dropzone-border-color-selected-hover;
    background-color: $spectrum-dropzone-background-color-selected-hover;

    .spectrum-IllustratedMessage-illustration {
      color: $spectrum-global-color-blue400;
    }
  }
}
