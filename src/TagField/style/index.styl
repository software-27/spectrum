@import '../../commons';

$coral-tagfield-margin = 6*$px;

.coral-TagField {
  display: flex;
  flex-wrap: wrap;
  border: $px solid;
  border-radius: $spectrum-border-radius;
  padding: $coral-tagfield-margin;
  padding-top: 0;
  align-items: center;
  box-sizing: border-box;
  width: $spectrum-component-single-line-width;
  transition: border-color $spectrum-transition-time ease-in-out, box-shadow $spectrum-transition-time ease-in-out;

  .coral-Tag {
    margin: $coral-tagfield-margin $coral-tagfield-margin 0 0;
    padding: $px 5*$px;
    padding-top: $px;
    padding-bottom: $px;
    height: auto;

    &:last-of-type {
      margin-right: 0;
    }

    &.is-closable {
      padding-right: 20*$px;
    }

    .coral-Tag-removeButton {
      width: 18*$px;
      .coral-Icon {
        margin-top: 0;
      }
    }
  }

  .coral-Textfield.coral-TagField-input {
    border: none;
    flex: 1;
    width: 100%;
    height: 100%;
    min-width: 40*$px;
    border: 0;
    outline: none;
    background: transparent;
    box-shadow: none;
    text-indent: $coral-tagfield-margin;
    margin-top: $coral-tagfield-margin;

    &:focus,
    &:hover,
    &:disabled {
      border: 0;
      outline: none;
      box-shadow: none;
      background: transparent;
    }
  }
}

.coral-TagField--quiet {
  border-radius: 0;
  border: none;
  border-bottom: 1*$px solid;

  // removes the side padding to align the text properly
  padding-left: 0;
  padding-right: 0;
}

@import 'light';
@import 'dark';
