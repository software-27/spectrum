// Spectrum relies on variables from a skin for sizing etc.
// See https://git.corp.adobe.com/Spectrum/spectrum-abstract-stylus/issues/10

.coral3-ButtonGroup {
  display: inline-block;
  vertical-align: top;
  margin: 0;
  padding: 0;
  list-style: none;
  // removes the spacing between the buttons.
  font-size: 0;
}

// places every item next to each other
.coral3-ButtonGroup-item {
  // removes the border from every item
  border-radius: 0;
  display: inline-block;
  vertical-align: top;
  position: relative;
}

// brings the button to the front once the user interacts with it
.coral3-ButtonGroup-item:focus,
.coral3-ButtonGroup-item:active {
  z-index: 1;
}

.coral3-ButtonGroup-item.coral-Button {
  normal-text();

  // reverts the smoothing added by the buttons
  font-smoothing: subpixel-antialiased;

  margin: 0 -1px 0 0;
  border-width: 1px;
}

.coral3-ButtonGroup-item:first-of-type {
  border-top-left-radius: $spectrum-border-radius;
  border-bottom-left-radius: $spectrum-border-radius;
}

.coral3-ButtonGroup-item:last-of-type {
  margin: 0;
  border-top-right-radius: $spectrum-border-radius;
  border-bottom-right-radius: $spectrum-border-radius;
}

.coral3-ButtonGroup-select {
  display: none;
}

.coral3-ButtonGroup-item.coral-Button--quiet {
  .coral-Icon {
    transition: none; // stop delayed animation
  }
}

