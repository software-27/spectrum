@import '@spectrum/spectrum-abstract-stylus/dist/components/button/skin.styl'

$spectrum-buttongroup-background = $spectrum-global-color-grey2;
$spectrum-buttongroup-background-hover = $spectrum-global-color-grey1;
$spectrum-buttongroup-background-active = $spectrum-global-color-grey3;
$spectrum-buttongroup-background-selected = $spectrum-global-color-grey4;
$spectrum-buttongroup-background-selected-hover = $spectrum-global-color-grey3;
$spectrum-buttongroup-background-selected-active = $spectrum-global-color-grey2;

$spectrum-buttongroup-border = $spectrum-global-color-grey5;
$spectrum-buttongroup-focus = $spectrum-alias-focus-blue;
$spectrum-buttongroup-text = $spectrum-global-color-grey8;
$spectrum-buttongroup-text-hover = $spectrum-global-color-grey9;
$spectrum-buttongroup-text-active = $spectrum-global-color-grey10;

.coral3-ButtonGroup-item {
  background: $spectrum-buttongroup-background;
  border-color: $spectrum-buttongroup-border;
  color: $spectrum-global-color-grey8;

  &:focus {
    background: $spectrum-buttongroup-background;
    border-color: $spectrum-buttongroup-focus;
    box-shadow: 0 0 0 1px solid $spectrum-buttongroup-focus;
    color: $spectrum-buttongroup-text-hover;
  }

  &:hover {
    background: $spectrum-buttongroup-background-hover;
    border-color: $spectrum-buttongroup-border;
    color: $spectrum-buttongroup-text-hover;
  }

  &:active {
    background: $spectrum-buttongroup-background-active;
    border-color: $spectrum-buttongroup-border;
    color: $spectrum-buttongroup-text-active;
  }

  &.is-selected {
    background: $spectrum-buttongroup-background-selected;
    border-color: $spectrum-buttongroup-border;
    color: $spectrum-buttongroup-text-hover;

    &:focus {
      border-color: $spectrum-buttongroup-focus;
    }

    &:hover {
      border-color: $spectrum-buttongroup-border;
      background: $spectrum-buttongroup-background-selected-hover;
    }

    &:active {
      border-color: $spectrum-buttongroup-border;
      background: $spectrum-buttongroup-background-selected-active;
      color: $spectrum-buttongroup-text-active;
    }
  }
}

.coral3-ButtonGroup-item.spectrum-Button--quiet {
  border-radius: $spectrum-border-radius;
  border-color: transparent;
  background: transparent;

  &:focus {
    box-shadow: 0 0 0 2px $spectrum-buttongroup-focus;
  }

  &.is-selected {
    color: $spectrum-buttongroup-focus;
    border-color: transparent;
  }

  &:hover {
    color: $spectrum-buttongroup-text-hover;
    box-shadow: none;
  }

  &:active {
    color: $spectrum-buttongroup-text-active;
  }
}
