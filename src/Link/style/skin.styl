@import '@spectrum/spectrum-abstract-stylus/dist/components/link/skin'

.coral-Link {
  spectrum-link--default()

  &:focus,
  &.is-focused {
    spectrum-link--focus()
  }

  &:hover {
    spectrum-link--hover()
  }

  &:active {
    spectrum-link--active()
  }
}

.coral-Link--subtle {
  spectrum-link--subtle()

  &:focus,
  &.is-focused {
    spectrum-link--subtle--focus()
  }

  &:hover {
    spectrum-link--subtle--hover()
  }

  &:active {
    spectrum-link--subtle--active()
  }
}
