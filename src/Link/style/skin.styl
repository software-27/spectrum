$spectrum-link-color = $spectrum-color-text-link-default
$spectrum-link-color-hover = $spectrum-color-text-link-hover
$spectrum-link-color-active = $spectrum-color-text-link-active
$spectrum-link-color-focus = $spectrum-color-focus-blue
$spectrum-link-subtle-focus = $spectrum-color-constant-grey9
$spectrum-link-subtle-hover = $spectrum-color-constant-grey10

.coral-Link {
  color: $spectrum-link-color;

  &:focus,
  &.is-focused {
    color: $spectrum-link-color-focus;
  }

  &:hover {
    color: $spectrum-link-color-hover;
  }

  &:active {
    color: $spectrum-link-color-active;
  }
}

.coral-Link--subtle {
  color: inherit;

  &:focus,
  &.is-focused {
    color: inherit;
    box-shadow: 0 1*$px 0 $spectrum-link-subtle-focus;
  }

  &:hover {
    color: $spectrum-link-subtle-hover;
  }

  &:active {
    color: $spectrum-link-subtle-hover;
  }
}
