@require '../../commons'

.coral-Link {
  text-decoration: none;
  transition: color $spectrum-transition-time ease-in-out;
  outline: none;

  &:focus,
  &.is-focused {
    text-decoration: underline;
  }

  &.is-disabled {
    opacity: 0.15;
  }
}

.coral-Link--subtle {
  text-decoration: underline;
}

