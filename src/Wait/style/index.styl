@import '../../commons'
@import '@spectrum/spectrum-abstract-stylus/dist/components/wait'

.coral-Wait {
  spectrum-wait-spinner()
  spectrum-wait-spinner--small()
}

// @deprecated .coral-Wait--center, please use .coral-Wait--centered
.coral-Wait--center,
.coral-Wait--centered {
  spectrum-wait--centered()
  spectrum-wait-spinner--centered--small()
}

.coral-Wait--medium {
  spectrum-wait-spinner--medium()
}

.coral-Wait--centered.coral-Wait--medium {
  spectrum-wait-spinner--centered--medium()
}

.coral-Wait--large {
  spectrum-wait-spinner--large()
}

.coral-Wait--centered.coral-Wait--large {
  spectrum-wait-spinner--centered--large()
}

.coral-Wait--dots {
  spectrum-wait-dots()
  spectrum-wait-dots--small()
}

.coral-Wait--dots.coral-Wait--medium {
  spectrum-wait-dots--medium()
}

.coral-Wait--dots.coral-Wait--large {
  spectrum-wait-dots--large()
}

.coral-Wait--centered.coral-Wait--dots {
  spectrum-wait-dots--centered--small()
}

.coral-Wait--centered.coral-Wait--dots.coral-Wait--medium {
  spectrum-wait-dots--centered--medium()
}

.coral-Wait--centered.coral-Wait--dots.coral-Wait--large {
  spectrum-wait-dots--centered--large()
}

@require 'light.styl'
@require 'dark.styl'
