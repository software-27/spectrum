$spectrum-numberinput-border-color = $spectrum-input-border-color-default
$spectrum-numberinput-border-color-focus = $spectrum-input-border-color-focus
$spectrum-numberinput-border-color-invalid = $spectrum-input-invalid-border-color-default

.coral3-NumberInput {
  .coral-InputGroup-button {
    > .coral3-NumberInput-stepUp,
    > .coral3-NumberInput-stepDown {
      &:focus,
      &.is-focused {
        box-shadow: none;
      }
    }
  }

  &:not([readonly]) {
    &.is-focused {
      box-shadow: 0 0 0 $px $spectrum-numberinput-border-color-focus;

      .coral-InputGroup-button {
        > .coral3-NumberInput-stepUp,
        > .coral3-NumberInput-stepDown {
          border-color: $spectrum-numberinput-border-color-focus;
        }
      }
    }

    &.is-invalid {
      .coral-InputGroup-button {
        > .coral3-NumberInput-stepUp,
        > .coral3-NumberInput-stepDown {
          border-color: $spectrum-numberinput-border-color-invalid;

          &:focus,
          &.is-focused {
            border-color: $spectrum-numberinput-border-color-invalid;
          }
        }
      }

      &.is-focused {
        box-shadow: 0 0 0 $px $spectrum-numberinput-border-color-invalid;
      }
    }
  }

  &:not(.is-invalid) {
    .coral-InputGroup-input {
      &:invalid,
      &.is-invalid {
        color: $spectrum-text-text-color-default;
        border-color: $spectrum-numberinput-border-color;

        &:focus,
        &.is-focused {
          box-shadow: 0 0 0 $px $spectrum-numberinput-border-color-focus;
          border-color: $spectrum-numberinput-border-color-focus;
        }
      }
    }
  }
}
