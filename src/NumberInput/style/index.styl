@require '../../commons'

$spectrum-numberinput-button-height = $spectrum-component-single-line-height / 2;
$spectrum-numberinput-padding = $spectrum-padding / 2;

.coral3-NumberInput {
  .coral3-NumberInput-input:invalid {
    z-index: 2;
  }

  .coral-InputGroup-input {
    border-radius: 0 $spectrum-border-radius $spectrum-border-radius 0;
  }

  > .coral-InputGroup-button {
    transition: box-shadow $spectrum-transition-time ease-in-out;
    border-radius: $spectrum-border-radius 0 0 $spectrum-border-radius;
  }

  .coral-InputGroup-button.coral3-NumberInput-stepUp,
  .coral-InputGroup-button.coral3-NumberInput-stepDown {
    display: block;
    min-width: 0;
    height: $spectrum-numberinput-button-height;
    padding-left: $spectrum-numberinput-padding;
    padding-right: $spectrum-numberinput-padding;
    border-right-width: 0;
    box-shadow: none !important; // box shadow is on parent

    .coral-Icon {
      line-height: $spectrum-numberinput-button-height;
    }
  }

  .coral-InputGroup-button.coral3-NumberInput-stepUp {
    border-bottom: none;
    border-radius: $spectrum-border-radius 0 0 0;

    &:focus,
    &.is-focused {
      border-bottom: none;
    }
  }

  .coral-InputGroup-button.coral3-NumberInput-stepDown {
    border-top: none;
    border-radius: 0 0 0 $spectrum-border-radius;

    &:focus,
    &.is-focused {
      border-top: none;
    }
  }

  &.is-invalid {
    &:after {
      right: 0;
    }
  }
}
