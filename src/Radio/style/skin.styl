@import '../../abstract/components/radio/skin.styl'

.coral-Radio-input {
  spectrum-radio-input()

  &:checked + .coral-Radio-checkmark {
    spectrum-radio-checkmark--checked()
  }

  &:focus + .coral-Radio-checkmark {
    spectrum-radio-checkmark--focus()
  }

  &:disabled {
    spectrum-radio-checkmark--disabled()
  }

  &:disabled ~ .coral-Radio-description {
    spectrum-radio-label--disabled()
  }
}

.coral-Radio {

  .coral-Radio-description {
    spectrum-radio-label()
  }

  .coral-Radio-checkmark {
    spectrum-radio-checkmark()
  }

  &:hover {
    .coral-Radio-checkmark {
      spectrum-radio-checkmark--hover()
    }

    .coral-Radio-description {
      spectrum-radio-label--hover()
    }
  }

  &:active {
    .coral-Radio-checkmark {
      spectrum-radio-checkmark--active()
    }

    .coral-Radio-description {
      spectrum-radio-label--active()
    }
  }

  &.is-disabled {
    .coral-Radio-checkmark {
      spectrum-radio-checkmark--disabled()
    }

    .coral-Radio-description {
      spectrum-radio-label--disabled()
    }
  }
}
