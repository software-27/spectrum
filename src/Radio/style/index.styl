@require '../../commons'
@import '@spectrum/spectrum-abstract-stylus/dist/components/radio/index.styl'

.coral-Radio {
  spectrum-radio()
}

.coral-Radio-input {
  spectrum-radio-input()

  &:checked + .coral-Radio-checkmark {
    spectrum-radio-checkmark--checked()
  }
}

.coral-Radio-description {
  spectrum-radio-label()
}

.coral-Radio-checkmark {
  spectrum-radio-checkmark()
}

.coral-Form--vertical {

  .coral-Form-field.coral-Radio {
    display: block;
  }

  .coral-Form-fieldwrapper--singleline .coral-Form-field.coral-Radio {
    float: left;
  }
}


@require 'light.styl'
@require 'dark.styl'
