@import '@spectrum/spectrum-abstract-stylus/dist/components/wizard/skin'

.coral-StepList {
  // Default Label Style
  .coral-Step-label {
    spectrum-wizard-label--incomplete()
  }

  // Default Marker Style
  .coral-Step-marker {
    spectrum-wizard-marker--incomplete()
  }

  // Default Line Style
  .coral-Step-line {
    spectrum-wizard-segment--incomplete()
  }

  // Lines Style after Complete
  .coral-Step.is-complete + .coral-Step .coral-Step-line {
    spectrum-wizard-segment--complete()
  }

  .coral-Step {

    // Step Completed
    &.is-complete {
      .coral-Step-marker {
        spectrum-wizard-marker--complete()
      }
    }

    // Step Selected
    &.is-selected {
      .coral-Step-label {
        spectrum-wizard-label--current()
      }

      .coral-Step-marker {
        spectrum-wizard-marker--current()
      }
    }
  }


  // Interactivity Styles
  &.coral-StepList--interactive {
    .coral-Step {

      // Step Hovered
      &:hover {
        .coral-Step-marker {
          spectrum-wizard-marker--complete()
        }
      }

      // Step Focused
      &:focus {
        .coral-Step-marker {
          spectrum-wizard-marker--current()
        }
      }
    }
  }
}
