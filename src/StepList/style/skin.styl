$spectrum-steplist-label-color = $spectrum-global-color-grey8;
$spectrum-steplist-step-color  = $spectrum-global-color-grey5;
$spectrum-steplist-line-complete-color = $spectrum-global-color-grey6;
$spectrum-steplist-step-complete-color = $spectrum-global-color-grey7;
$spectrum-steplist-blue-color = $spectrum-global-color-blue4;

.coral-StepList {

  // Default Label Style
  .coral-Step-label {
    color: $spectrum-steplist-label-color;
  }

  // Default Marker Style
  .coral-Step-marker {
    border-color: $spectrum-steplist-step-color;
  }

  // Default Line Style
  .coral-Step-line {
    border-bottom-color: $spectrum-steplist-step-color;
  }

  // Lines Style after Complete
  .coral-Step.is-complete + .coral-Step .coral-Step-line {
    border-bottom-color: $spectrum-steplist-line-complete-color;
  }

  .coral-Step {

    // Step Completed
    &.is-complete {
      .coral-Step-marker {
        background: $spectrum-steplist-step-complete-color;
      }
    }

    // Step Selected
    &.is-selected {
      .coral-Step-label {
        color: $spectrum-steplist-blue-color;
      }

      .coral-Step-marker {
        background: $spectrum-steplist-blue-color;
      }
    }
  }


  // Interactivity Styles
  &.coral-StepList--interactive {
    .coral-Step {

      // Step Hovered
      &:hover {
        .coral-Step-marker {
          background: $spectrum-steplist-label-color;
        }
      }

      // Step Focused
      &:focus {
        .coral-Step-marker {
          background: $spectrum-steplist-blue-color;
        }
      }
    }
  }
}
