@import '../../abstract/components/alert/skin.styl'

.coral3-Alert {
  spectrum-alert()
  // Default color is info
  spectrum-alert--info()

  .coral3-Alert-typeIcon {
    // Default color is info
    spectrum-alert-typeIcon--info()
  }
}

// 'Help' alert has the same colors as the 'info' alert
.coral3-Alert--help,
.coral3-Alert--info {
  spectrum-alert--info()

  .coral3-Alert-typeIcon {
    spectrum-alert-typeIcon--info()
  }
}

.coral3-Alert--error {
  spectrum-alert--error()

  .coral3-Alert-typeIcon {
    spectrum-alert-typeIcon--error()
  }
}

.coral3-Alert--success {
  spectrum-alert--success()

  .coral3-Alert-typeIcon {
    spectrum-alert-typeIcon--success()
  }
}

.coral3-Alert--warning {
  spectrum-alert--warning()

  .coral3-Alert-typeIcon {
    spectrum-alert-typeIcon--warning()
  }
}

.coral3-Alert-header {
  spectrum-alert-header()
}

.coral3-Alert-content {
  spectrum-alert-content()
}

