$coral-tooltip-info-background-color = $spectrum-color-info
$coral-tooltip-error-background-color = $spectrum-color-error
$coral-tooltip-warning-background-color = $spectrum-color-warning
$coral-tooltip-success-background-color = $spectrum-color-success
$coral-tooltip-inspect-background-color = $spectrum-color-constant-grey8

$coral-tooltip-text-color = white
$coral-tooltip-icon-color = white;

$coral-tooltip-inspect-text-color = white;
$coral-tooltip-inspect-icon-color = white;

// Mixin for coloring the bubble and tip.
bubble-tip-color($background-color) {
 background-color: $background-color;

 &.coral3-Tooltip--arrowDown:after { // inner color
   border-bottom-color: $background-color;
 }
 &.coral3-Tooltip--arrowUp:after {
   border-top-color: $background-color;
 }
 &.coral3-Tooltip--arrowRight:after { // inner color
   border-right-color: $background-color;
 }
 &.coral3-Tooltip--arrowLeft:after { // inner color
   border-left-color: $background-color;
 }
}

.coral3-Tooltip {
 color: $coral-tooltip-text-color;

 .coral-Icon {
   color: $coral-tooltip-icon-color;
 }
}

.coral3-Tooltip--info {
 // default is blue
 bubble-tip-color($coral-tooltip-info-background-color);
}

.coral3-Tooltip--error {
 bubble-tip-color($coral-tooltip-error-background-color);
}

.coral3-Tooltip--warning {
 bubble-tip-color($coral-tooltip-warning-background-color);
}

.coral3-Tooltip--success {
 bubble-tip-color($coral-tooltip-success-background-color);
}

.coral3-Tooltip--inspect {
 bubble-tip-color($coral-tooltip-inspect-background-color);

 color: $coral-tooltip-inspect-text-color;

 .coral-Icon {
   color: $coral-tooltip-inspect-icon-color;
 }
}
