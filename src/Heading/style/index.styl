@require '../../commons'

.coral-Heading {
  margin: 0;
}

.coral-Heading--1 {
  light-text();
  font-size: 40*$px;
  line-height: 48*$px;
  margin-bottom: 8*$px;
}

.coral-Heading--2 {
  light-text();
  font-size: 28*$px;
  line-height: 32*$px;
  margin-bottom: 2*$px;
}

.coral-Heading--3,
.coral-Heading--4,
.coral-Heading--5,
.coral-Heading--6 {
  bold-text();
}

.coral-Heading--3 {
  font-size: 18*$px;
  line-height: 24*$px;
}

.coral-Heading--4 {
  font-size: 14*$px;
  line-height: 20*$px;
}

.coral-Heading--5 {
  font-size: 14*$px;
  line-height: 20*$px;
}

.coral-Heading--6 {
  text-transform: uppercase;
  font-size: 10*$px;
  line-height: 12*$px;
}

@require 'light.styl'
@require 'dark.styl'
