@require '../../commons'
@import '../../abstract/components/checkbox/index.styl'

.coral-Checkbox {
  spectrum-checkbox()
}

.coral-Checkbox-input {
  spectrum-checkbox-input()

  &:checked + .coral-Checkbox-checkmark {
    spectrum-checkbox-checkmark--checked()
  }
}

.coral-Checkbox-description {
  spectrum-checkbox-label()
}

.coral-Checkbox-checkmark {
  spectrum-checkbox-checkmark()

  &.is-indeterminate {
    spectrum-checkbox-checkmark--indeterminate()
  }
}


.coral-Form--vertical {

  .coral-Form-field.coral-Checkbox {
    display: block;
  }

  .coral-Form-fieldwrapper--singleline .coral-Form-field.coral-Checkbox {
    float: left;
  }
}

@require 'light.styl'
@require 'dark.styl'
