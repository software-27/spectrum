@import '@spectrum/spectrum-abstract-stylus/dist/components/tab/skin'

.coral-Tab {
  .coral-Tab-label {
    spectrum-tab-label-default()
  }

  &:hover .coral-Tab-label {
    spectrum-tab-label-hover()
  }

  &.is-selected .coral-Tab-label {
    spectrum-tab-label-active()
    > .coral-Tab-label:after {
      spectrum-tab-line-default()
    }
  }

  &:focus:not(:active) .coral-Tab-label {
    spectrum-tab-label-focus()

    > .coral-Tab-label:after {
      spectrum-tab-line-focus()
    }
  }

  &.is-disabled,
  &.is-disabled:hover,
  &.is-disabled:focus {
    .coral-Tab-label {
      spectrum-tab-label-disabled()

      &.is-selected {
        spectrum-tab-label-disabled()
        &:after {
          spectrum-tab-line-disabled()
        }
      }
    }
  }
}
