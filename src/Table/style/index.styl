@require '../../commons'

$spectrum-table-header-cell-height = 37*$px;
$spectrum-table-cell-height = 43*$px;

.coral-Table {
  border-collapse: separate;
  width: 100%;
}

.coral-Table-headerCell,
.coral-Table-cell {
  padding: 0 10*$px;
  vertical-align: middle;
  text-align: left;
}

.coral-Table-headerCell {
  height: $spectrum-table-header-cell-height;
  font-weight: normal;
  text-transform: uppercase;
  font-size: 13*$px;
}

.coral-Table-cell {
  height: $spectrum-table-cell-height;
  font-size: 14*$px;
}

.coral-Table-head {
  .coral-Table-row:not(:first-of-type) {
    .coral-Table-cell,
    .coral-Table-headerCell {
      border-top: 1*$px solid;
    }
  }
}

.coral-Table-body {
  .coral-Table-cell {
    border-top: 1*$px solid;

    &:first-of-type {
      border-left: 1*$px solid;
    }

    &:last-of-type {
      border-right: 1*$px solid;
    }
  }

  .coral-Table-row {
    &:first-of-type {
      .coral-Table-cell {
        border-top: 1*$px solid;

        &:first-of-type {
          border-top-left-radius: $spectrum-border-radius;
        }

        &:last-of-type {
          border-top-right-radius: $spectrum-border-radius;
        }
      }
    }

    &:last-of-type {
      .coral-Table-cell {
        border-bottom: 1*$px solid;

        &:first-of-type {
          border-bottom-left-radius: $spectrum-border-radius;
        }

        &:last-of-type {
          border-bottom-right-radius: $spectrum-border-radius;
        }
      }
    }
  }
}

.coral-Table--bordered {
  .coral-Table-head {
    .coral-Table-cell,
    .coral-Table-headerCell {
      &:not(:last-of-type) {
        border-right: 1*$px solid;
      }
    }
  }

  .coral-Table-body {
    .coral-Table-cell:not(:last-of-type) {
      border-right: 1*$px solid;
    }
  }
}

.coral-Table--hover {
  .coral-Table-body {
    .coral-Table-row:hover {
      cursor: pointer;
    }
  }
}

@require 'light.styl'
@require 'dark.styl'
