@import '../../commons'
@import '@spectrum/spectrum-abstract-stylus/dist/components/progress'

.coral-Progress {
  spectrum-progress()
}

.coral-Progress-bar {
  spectrum-progress-bar()
}

.coral-Progress-status {
  spectrum-progress-status()
}

.coral-Progress-label {
  spectrum-progress-label()
}

.coral-Progress--indeterminate {
  spectrum-progress--indeterminate()

  .coral-Progress-status {
    spectrum-progress-status--indeterminate()
  }

  .coral-Progress-bar {
    spectrum-progress-bar--indeterminate()
  }
}

.coral-Progress--leftLabel {
  spectrum-progress--leftLabel()

  .coral-Progress-label {
    spectrum-progress-label--leftLabel()
  }

  .coral-Progress-bar {
    spectrum-progress-bar--leftLabel()
  }
}

.coral-Progress--bottomLabel {
  spectrum-progress--bottomLabel()

  .coral-Progress-label {
    spectrum-progress-label--bottomLabel()
  }

  .coral-Progress-bar {
    spectrum-progress-bar--bottomLabel()
  }
}

.coral-Progress--noLabel {
  spectrum-progress--noLabel()

  .coral-Progress-label {
    spectrum-progress-label--noLabel()
  }

  .coral-Progress-bar {
    spectrum-progress-bar--noLabel()
  }
}

.coral-Progress--small {
  spectrum-progress--small()

  .coral-Progress-label {
    spectrum-progress-label--small()
  }

  .coral-Progress-status {
    spectrum-progress-status--small()
  }

  .coral-Progress-bar {
    spectrum-progress-bar--small()
  }

  &.coral-Progress--bottomLabel {
    spectrum-progress--small--bottomLabel()

    .coral-Progress-label {
      spectrum-progress-label--small--bottomLabel()
    }
  }

  &.coral-Progress--leftLabel,
  &.coral-Progress--rightLabel {
    spectrum-progress--small--leftLabel()

    // Move the bar to the vertical center
    .coral-Progress-bar {
      spectrum-progress-bar--small--leftLabel()
    }

    .coral-Progress-label {
      spectrum-progress-label--small--leftLabel()
    }
  }
}

.coral-Progress--medium {
  spectrum-progress--medium()

  .coral-Progress-bar {
    spectrum-progress-bar--medium()
  }

  &.coral-Progress--leftLabel,
  &.coral-Progress--rightLabel {
    spectrum-progress--medium--leftLabel()

    // Move the bar to the vertical center
    .coral-Progress-bar {
      spectrum-progress-bar--medium--leftLabel()
    }

    .coral-Progress-label {
      spectrum-progress-label--medium--leftLabel()
    }
  }
}

.coral-Progress--large {
  spectrum-progress--large()

  .coral-Progress-label {
    spectrum-progress-label--large()
  }

  .coral-Progress-status {
    spectrum-progress-status--large()
  }

  .coral-Progress-bar {
    spectrum-progress-bar--large()
  }

  &.coral-Progress--bottomLabel {
    spectrum-progress--large--bottomLabel()

    .coral-Progress-label {
      spectrum-progress-label--large--bottomLabel()
    }
  }

  &.coral-Progress--leftLabel,
  &.coral-Progress--rightLabel {
    spectrum-progress--large--leftLabel()

    // Move the bar to the vertical center
    .coral-Progress-bar {
      spectrum-progress-bar--large--leftLabel()
    }

    .coral-Progress-label {
      spectrum-progress-label--large--leftLabel()
    }
  }
}

@require 'light.styl'
@require 'dark.styl'
