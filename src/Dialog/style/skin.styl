.coral-Dialog {
  &.coral-Dialog--backdropNone {
    background: none;
  }
}

.coral-Dialog-header--error {
  .coral-Dialog-title {
    color: $spectrum-dialog-error-title-text-color-default;
  }

  .coral-Dialog-typeIcon {
    color: $spectrum-dialog-error-icon-color-default;
  }
}

.coral-Dialog-header--warning {
  .coral-Dialog-title {
    color: $spectrum-dialog-warning-title-text-color-default;
  }

  .coral-Dialog-typeIcon {
    color: $spectrum-dialog-warning-icon-color-default;
  }
}

.coral-Dialog-header--help,
.coral-Dialog-header--info {
  .coral-Dialog-title {
    color: $spectrum-dialog-info-title-text-color-default;
  }

  .coral-Dialog-typeIcon {
    color: $spectrum-dialog-info-icon-color-default;
  }
}

.coral-Dialog-header--success {
  .coral-Dialog-title {
    color: $spectrum-dialog-success-title-text-color-default;
  }

  .coral-Dialog-typeIcon {
    color: $spectrum-dialog-success-icon-color-default;
  }
}

.coral-Dialog-wrapper {
  background: $spectrum-dialog-background-color-default;
}

.coral-Dialog-header {
  background: $spectrum-dialog-background-color-default;

  &:after {
    background: $spectrum-dialog-title-divider-color-default;
  }
}

.coral-Dialog-footer {
  background: $spectrum-dialog-background-color-default;
}
