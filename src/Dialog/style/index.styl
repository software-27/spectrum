@require '../../commons'

$spectrum-dialog-height = auto;
$spectrum-dialog-min-width = 320*$px;
$spectrum-dialog-max-width = 90%;
$spectrum-dialog-margin = 40*$px;

$spectrum-dialog-border-width = 1*$px;
$spectrum-dialog-border-radius = $spectrum-border-radius;
$spectrum-dialog-header-font-size = 18*$px;
$spectrum-dialog-header-height = 30*$px;
$spectrum-dialog-padding = 25*$px;

$spectrum-dialog-width-small = 300*$px;
$spectrum-dialog-width-medium = 600*$px;
$spectrum-dialog-width-large = 90%;


$spectrum-dialog-closebutton-height = 18*$px;

.coral-Dialog {
  position: relative;
  margin: $spectrum-dialog-margin auto;

  // Scroll vertically only
  display: block;
  overflow-x: hidden;
  overflow-y: auto;
  outline: none;

  // Match the fade time of the backdrop
  transition: opacity $spectrum-transition-time;
  opacity: 0;

  &.coral-Dialog--backdropNone {
    pointer-events: none;

    .coral-Dialog-wrapper {
      pointer-events: auto;
    }
  }

  &.coral-Dialog--S {
    width: $spectrum-dialog-width-small;
  }

  &.coral-Dialog--M {
    width: $spectrum-dialog-width-medium;
  }

  &.coral-Dialog--L {
    width: $spectrum-dialog-width-large;
  }

  &.is-open {
    opacity: 1;
  }
}

.coral-Dialog-header {
  display: block;
}

.coral-Dialog-content {
  display: block;
}

.coral-Dialog-footer {
  display: block;
}

.coral-Dialog-wrapper {
  display: block;
  padding: $spectrum-dialog-padding;
  border-radius: $spectrum-dialog-border-radius;
  outline: none; // Firefox shows outline
}

.coral-Dialog-header {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: $spectrum-dialog-header-height;
  border-radius: $spectrum-dialog-border-radius $spectrum-dialog-border-radius 0 0;
  outline: none; // Hide focus outline around header

  &::after {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    height: $spectrum-dialog-border-width;
    content: '';
  }
}

.coral-Dialog-title {
  font-size: $spectrum-dialog-header-font-size;
  line-height: 100%;
  overflow: visible;
  padding-left: 0;
  padding-right: 15*$px;
  outline: none; // Hide focus outline

  &,
  &:not(:first-child) { // Undo margin from.coral-Heading--2:not(:first-child)
    margin: 0;
  }
}

.coral-Dialog-typeIcon {
  position: absolute;
  right: 0;
  top: -2*$px;
}

.coral-Dialog-closeButton {
  line-height: $spectrum-dialog-closebutton-height;
  position: absolute;
  top: 0;
  right: 0;
  display: none;
  width: $spectrum-dialog-closebutton-height;
  height: $spectrum-dialog-closebutton-height;
}

.coral-Dialog-content {
  display: block;
  box-sizing: border-box;
  padding: 0;
  margin-top: 20*$px;

  // Stop right there! The dialog's body should NOT scroll

  outline: none; // Hide focus outline
  word-break: break-word; // CUI-6659
}

.coral-Dialog-footer {
  &:after {
    content: " "; /* Older browser do not support empty content */
    visibility: hidden;
    display: block;
    height: 0;
    clear: both;
  }

  border-radius: 0 0 $coral-dialog-border-radius $coral-dialog-border-radius;
  text-align: right; // right align buttons
  outline: none; // Hide focus outline

  .coral-Button {
    margin: 16*$px 12*$px;
  }

  .coral-Button:first-child {
    margin-left: 0;
  }

  .coral-Button:last-child {
    margin-right: 16*$px;
  }

  .coral-Button + .coral-Button {
    margin-left: 0;
  }
}

@require 'light.styl'
@require 'dark.styl'
