@import '@spectrum/spectrum-css/dist/components/slider/index.css';
@import '@spectrum/spectrum-css/dist/components/slider/multiStops/light.css';
@import '@spectrum/spectrum-css/dist/components/slider/multiStops/lightest.css';
@import '@spectrum/spectrum-css/dist/components/slider/multiStops/dark.css';
@import '@spectrum/spectrum-css/dist/components/slider/multiStops/darkest.css';

.react-spectrum-Slider--round--is-dragged {
  cursor: ns-resize;
  cursor: -webkit-grabbing;
  cursor: grabbing;

  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

  .spectrum-Slider--round {
    .spectrum-Slider-label,
    .spectrum-Slider-value {
      cursor: inherit;
    }
  }
}

.react-spectrum-Slider--round.spectrum-Slider--round {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  .spectrum-Slider-labelContainer {
    display: flex;
    justify-content: space-between;
    margin-bottom: 6px;
    min-width: 70px;

    .spectrum-Slider-label {
      flex: 0 1 auto;
    }
    .spectrum-Slider-value {
      margin-left: 6px;
    }
  }

  .spectrum-Slider-controls {
    margin-right: 0;
  }
}
