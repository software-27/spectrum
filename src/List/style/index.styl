@require '../../commons'

$spectrum-basiclist-border-radius = $spectrum-border-radius;
$spectrum-basiclist-border-width = $px;

$spectrum-basiclist-item-height = 40*$px;
$spectrum-basiclist-item-padding-left = 14*$px;
$spectrum-basiclist-item-padding-top = 9*$px;
$spectrum-basiclist-item-focus-width = 2*$px;
$spectrum-basiclist-item-contentheight = $spectrum-basiclist-item-height - ($spectrum-basiclist-item-padding-top * 2);

.coral-BasicList {
  display: block;

  overflow-y: auto;

  border-radius: $spectrum-basiclist-border-radius;
  border-width: $spectrum-basiclist-border-width;
  border-style: solid;
}

.coral-BasicList-item {
  display: block;
  box-sizing: border-box;

  padding: $spectrum-basiclist-item-padding-top $spectrum-basiclist-item-padding-left $spectrum-basiclist-item-padding-top ($spectrum-basiclist-item-padding-left - 2 * $spectrum-basiclist-item-focus-width);
  min-height: $spectrum-basiclist-item-height;

  text-decoration: none;
  text-align: left;

  border-left: solid $spectrum-basiclist-item-focus-width transparent;
  transition: background-color $spectrum-transition-time ease-out,
              border-left-color $spectrum-transition-time ease-out;

  &.is-focused,
  &:focus {
    outline: none;
  }

  &[disabled] {
    cursor: default;
  }
}

.coral-BasicList-item-icon {
  float: left;

  width: 18*$px;
  height: $spectrum-basiclist-item-contentheight;

  margin-right: 12*$px;

  // Align text correctly
  vertical-align: middle;

  // Align icon correctly
  line-height: $spectrum-basiclist-item-contentheight;

  text-align: center;
}

.coral-BasicList-item-outerContainer {
  overflow: hidden; // Don't go under the float

  height: 100%; // Truncate text when it's longer than 2 lines
}

.coral-BasicList-item-contentContainer {
  display: table;
  table-layout: fixed; // Allow percent width
  width: 100%; // Required for text-overflow: ellipsis to apply on cells
}

.coral-BasicList-item-content {
  display: table-cell;
  vertical-align: middle; // Center content

  max-width: 100%; // Enable text-overflow

  height: $spectrum-basiclist-item-contentheight;

  overflow: ellipsis;
}

.coral-ButtonList-item,
.coral-AnchorList-item {
  // We can't do this as it causes the cursor flickers in FF and sometimes in Chrome
  // cursor: pointer;

  // Avoid selection on interactive elements
  user-select: none;
}

.coral-ButtonList-item {
  border: none;
}

@require 'light.styl'
@require 'dark.styl'
