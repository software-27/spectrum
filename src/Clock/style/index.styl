@import '@spectrum/spectrum-variables/stylus/spectrum-dark.styl'

$clock-period-width = 100px;
$clock-gap-width = 16px;

.react-spectrum-Clock {
  display: inline-table;
  vertical-align: top;
  min-width: $spectrum-alias-single-line-width;
}

.react-spectrum-Clock-minute,
.react-spectrum-Clock-hour {
  display: table-cell;
  width: 100%;
  min-width: 0px;
}

.react-spectrum-Clock-meridiem {
  display: table-cell;
  min-width: 0px;
  padding-left: "calc(%s / 2)" % $clock-gap-width;
  vertical-align: top;
}

.react-spectrum-Clock-divider {
  display: table-cell;
  line-height: $spectrum-alias-single-line-height;
  font-size: $clock-gap-width;
  vertical-align: middle;
  text-align: center;
  width: $clock-gap-width;
}
