@import '../../commons'

.react-spectrum-TabView {
  display: flex;
  flex-direction: column;

  .react-spectrum-TabView-body {
    position: relative;
    padding: 15*$px 8*$px;
    flex: 1;
  }

  &.react-spectrum-TabView--vertical {
    flex-direction: row;
    .react-spectrum-TabView-body {
      padding: 4*$px 15*$px;
    }
  }
}
